<nav class="navbar navbar-expand-lg custom-nav mb-3">
    <div class="navbar-brand nav-head">Nomadic Matt Travel Scraper</div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav ml-auto">
            <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="/saved">Saved Articles</a>
        </div>
    </div>
</nav>
<div class="btn-style text-center">
    <button type="button" class="btn-lg btn mx-4" id="scrape">Scrape Articles</button>
    <button type="button" class="btn-lg btn mx-4" id="clear">Clear Articles</button>
</div>

<div class="container">

    {{#each articles}}
        <div class="card all-articles text-center mx-auto my-5" style="width: 24em">
            <div class="card-header">
            <h3>{{this.title}}</h3>
            </div>

            <div class="card-body">
            <img src={{this.image}}>
                <div class="row view-save mt-3">
                    <a class="col-md-6 save" data-id="{{ this.id }}">Save Article</a>
                    <a class="col-md-6 view" href="{{this.link}}" target="_blank">View Article</a>
                </div>
            </div>
        </div>
    {{/each}}

    {{#unless articles.length}}
    <h1>No available articles</h1>
    {{/unless}}

</div>
