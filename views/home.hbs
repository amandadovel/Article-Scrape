<div class="container">

    <div class="all-articles">
        {{#each articles}}
        <h3>{{this.title}}</h3>
        <a href="{{this.link}}" target="_blank">View Article</a>
        <img src={{this.image}}>
        <button class="save" data-id="{{ this.id }}">Save Article</button>
        {{/each}}
    </div>

    {{#unless articles.length}}
    <h1>No available articles</h1>
    {{/unless}}

</div>
